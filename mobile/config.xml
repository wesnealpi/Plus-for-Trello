<?xml version='1.0' encoding='utf-8'?>
<widget id="com.zigmandel.plusfortrello" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Plus for Trello</name>
    <description>
        Companion for "Plus for Trello" at the Chrome store
    </description>
    <author email="TODO REPLACE Support email" href="https://chrome.google.com/webstore/detail/plus-for-trello-time-trac/gjjpophepkbhejnglcmkdnncmaanojkf">
        Plus for Trello team
    </author>
	<icon src="www/img/icon.png" />
  <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
  <preference name="BackgroundColor" value="0xFF0079BF"/>
  <preference name="android-minSdkVersion" value="16" />
  <preference name="android-targetSdkVersion" value="25" />
  <preference name="AndroidLaunchMode" value="singleTop" />
  <preference name="exit-on-suspend" value="false" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="plusfortrello:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
